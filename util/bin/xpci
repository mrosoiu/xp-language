#!/bin/sh

##
# This file is part of the XP framework
#
# xpci [XP Code Inserter] - a utility to insert often uses code 
# segments, in, e.g. Nedit (http://nedit.org/). Follows the XP styleguide.
# Usage:
#   xpci --comment  Insert a method comment
#   xpci --header   Insert the required header
#   xpci --class    Insert a class template
# 
# $Id$

if [ "--comment" = "$1" ] ; then
cat <<EOC
    /**
     * (Insert method's description here)
     *
     * @access  
     * @param   
     * @return  
EOC
echo -n "     */"
fi 

if [ "--header" = "$1" ] ; then
cat <<EOH
/* This class is part of the XP framework
 *
 * \$Id\$ 
 */
EOH
fi

if [ "--class" = "$1" ] ; then
  cat <<EOC
<?php
/* This class is part of the XP framework
 *
 * \$Id\$ 
 */

  /**
   * (Insert class' description here)
   *
   * @ext      extension
   * @see      reference
   * @purpose  purpose
   */
  class Class extends Object {
  
  }
?>
EOC
fi

if [ "--cmdfile" = "$1" ] ; then
  cat <<EOC
<?php
/* This file is part of the XP framework
 *
 * \$Id\$ 
 */

  require('lang.base.php');
  xp::sapi('cli');
  uses(    
    'util.log.Logger',
    'util.PropertyManager',
    'rdbms.ConnectionManager'
  );

  // Params
  \$p= &new ParamString();
  
  // Display help
  if (\$p->exists('help', 'h')) {
    Console::writeLinef('...');
    exit();
  }
 
  
?>
EOC
fi
