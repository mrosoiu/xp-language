#!/bin/sh

if [ $# -lt 2 ] ; then
  cmd='--help'
  file=''
else 
  cmd=$1
  file=$2
  shift 2
fi

D=`dirname $0`
INCLUDE_PATH="$D:$D/../../../../skeleton/:."
XPCLI=$D/../../../../util/bin/xpcli.php

if [ "$OS" = "Windows_NT" ]; then
	D=`cygpath -w "$D"`
	INCLUDE_PATH=";$D;`cygpath -w $D/../../../../skeleton`"
	XPCLI=`cygpath -w $XPCLI`
fi

php -dinclude_path="$INCLUDE_PATH" "$XPCLI" Xar $cmd "$file" -R `pwd` --args="$*"
